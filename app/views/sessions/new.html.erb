<title>Sign In! Vinstagram</title>

<div class="welcome">

  <div class="form-header">
    <div class="logo">Vinstagram</div>
  </div>

  <div class="form">

    <% if flash.now[:errors] %>
      <%= flash.now[:errors][0] %>
      <br><br>
    <% end %>

    <form action="<%= session_url %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <label> Username:
        <input tabindex="1" type="text" name="user[username]" value="">
      </label>

      <br><br>

      <label> Password:
      <input tabindex="2" type="password" name="user[password]" value="">

      <br><br>

      <section class="options">
        Don't Have An Account Yet? <br>
        <u><%= link_to "Sign Up!", new_user_url %></u>
      </section>


      <input tabindex="3" class="button" type="submit" name="name" value="Log In!">

    </form>

    <br><br><br>

  </div>

</div>
