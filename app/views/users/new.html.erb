<div class="main-form">

  <title>Sign Up! Vinstagram</title>

  <% if flash[:errors] %>
    <%= flash[:errors].join("<br>").html_safe %>
    <br><br>
  <% end %>

  <form action="<%= users_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label> Username:
      <input type="text" name="user[username]" value="">
    </label>

    <br>
    <br>

    <label> Email:
    <input type="text" name="user[email]" value="">
    </label>

    <br>
    <br>

    <label> Password:
    <input type="password" name="user[password]" value="">

    <br>
    <br>

    <input type="submit" name="name" value="Sign Up!">

  </form>

  <br><br><br>

  Already Registered? <br>
  <%= link_to "Sign In!", new_user_url %>

</div>
