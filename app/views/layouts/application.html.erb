<!DOCTYPE html>
<html>

<head>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>



  <main class="content">

    <%= yield %>

    <% if signed_in? %>
      Signed In As: <%= current_user.username %>
      <%= button_to "Sign Out", session_url, :method => :delete %>
    <% end %>

  </main>


</body>

</html>
