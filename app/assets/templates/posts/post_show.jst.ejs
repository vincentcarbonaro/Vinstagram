<title>Post Show Page</title>

<h2>Post Show</h2>

<a href="#/user/<%= post.author().escape('id') %>"><%= post.author().escape('username') %></a>
<%= post.escape('Time_Ago') %>
<br>
<%= post.escape('text') %>
<br>
&hearts; <%= post.escape('num_likes') %>

<br>

<% post.comments().each( function (comment) { %>
  <strong><%= comment.escape('author_name') %></strong> <%= comment.escape('body') %>
  <br>
<%  }) %>

<br>
<% if(post.escape('is_liked') === "true") { %>
  <button class="toggle_like"><strong> &hearts; Liked</strong></button>
<%  } else { %>
  <button class="toggle_like">Like</button>
<% } %>


<div class="user_options">
</div>
