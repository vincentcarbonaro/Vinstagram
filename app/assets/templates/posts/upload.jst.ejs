<section class="upload-backdrop">
  <div class="upload">
    <title>Upload Post</title>

    <section class='upload-title'>
      <u>Upload a Post!</u>
    </section>

    <form class="post_form">

      <section class="post-image-select">
        Select a File To Upload <br>
        <input id="input-picture-file" type="file" name="picture">
      </section>

      <img class="post-pic-preview" src="" id="picture-preview">

      <section class="caption-and-submit">

        <textarea class="test-area" name="post[text]" rows="8" cols="40" value="">Write a Caption...</textarea>

        <input class="share-button" type="submit" value="Share Post!">

      </section>
    </form>
  </div>
</section>
